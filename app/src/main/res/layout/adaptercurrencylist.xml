<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/idCurrencyName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CurrencyName" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/idCurrencySign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="CurrencySign"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/idCurrencyValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="CurrencyValue"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button"
            android:layout_width="32dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/transparentbuttoncolor"
            android:backgroundTint="@color/white"
            android:onClick="imputFrom"
            android:padding="1dp"
            android:text="From"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="32dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/transparentbuttoncolor"
            android:backgroundTint="@color/white"
            android:onClick="imputTo"
            android:padding="1dp"
            android:text="To"
            android:textColor="@color/black"
            android:textSize="12sp" />

    </LinearLayout>
</LinearLayout>